template(name="home")
  h1 gitrt
  a(href="{{pathFor 'projectsIndex'}}") Projects

template(name="projectsIndex")
  h1 Projects
  ul
    each projects
      li
        a(href="{{pathFor 'projectsShow' _id}}") {{_id}}
  input.btn#new-project(type="button" value="New")

template(name="projectsShow")
  h1 Project {{_id}}
